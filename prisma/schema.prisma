generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model usuario {
  id       String @id @default(cuid())
  nombre   String @unique
  rol      String @default("USER")
  password String
}

model lugar {
  id           String            @id @default(cuid())
  nombre       String
  lat          Float
  lon          Float
  localizacion localizacion[]

  @@unique([lat, lon])
}

model categoria {
  id     String    @id @default(cuid())
  nombre String
  svg    String
  tipo   tipo[]
}

model tipo {
  id           String       @id @default(cuid())
  nombre       String
  svg          String
  categoria_id String
  categoria    categoria @relation(fields: [categoria_id], references: [id])
  soporte      soporte[]
}

model soporte {
  id       String     @id @default(cuid())
  modelo   String?
  pulgadas Int?
  imagen   String
  tipo_id  String
  tipo     tipo    @relation(fields: [tipo_id], references: [id])
  item     item[]
}

model item {
  id           String            @id @default(cuid())
  nombre       String
  soporte_id   String
  soporte      soporte        @relation(fields: [soporte_id], references: [id])
  localizacion localizacion[]
}

model localizacion {
  id       String      @id @default(cuid())
  fecha    DateTime
  item_id  String
  item     item     @relation(fields: [item_id], references: [id])
  lugar_id String
  lugar    lugar    @relation(fields: [lugar_id], references: [id])
}